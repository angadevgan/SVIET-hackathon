{
    "manifest_version": 3,
    "name": "Footprints",
    "version": "0.1.0",
    "description": "Determine Carbon Footprints generated by sites you surf",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "24": "images/icon24.png",
            "32": "images/icon32.png"
        }
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+Shift+1"
            }
        },
        "duplicate-tab": {
            "suggested_key": {
                "default": "Ctrl+Shift+2",
                "mac": "Command+Shift+2"
            },
            "description": "Duplicates the current active tab"
        }
    },
    "background": {
        "service_worker": "service-worker.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["index.js", "index.js.map", "content.js", "carbon.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "matches": ["<all_urls>"],
            "resources": ["images/icon32.png"]
        }
    ],
    "permissions": [
        "tabs",
        "storage"
    ],
    "options_ui": {
        "open_in_tab": true,
        "page": "options.html"
      }
}